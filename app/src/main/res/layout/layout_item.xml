<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size16"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="@dimen/size80"
        android:layout_height="@dimen/size80"
        android:id="@+id/img_avatar"
        android:background="@color/colorAccent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size80"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/size16"
        android:layout_marginLeft="@dimen/size16"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tran Minh Tuan"
            android:gravity="center"
            android:textSize="@dimen/textSize20"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/size16"
            />
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0975 227 856"
            android:textSize="@dimen/textSize20"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>